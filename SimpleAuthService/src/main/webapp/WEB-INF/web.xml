<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>MyLoginServlet</servlet-name>
        <servlet-class>ru.khannanovayrat.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MyRegistrationServlet</servlet-name>
        <servlet-class>ru.khannanovayrat.servlet.RegistrationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MyRegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyUsersServlet</servlet-name>
        <servlet-class>ru.khannanovayrat.servlet.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyUsersServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    //filters
    <filter>
        <filter-name>ListFilter</filter-name>
        <filter-class>ru.khannanovayrat.filter.ListFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ListFilter</filter-name>
        <url-pattern>/list</url-pattern>
    </filter-mapping>

</web-app>